---
import type { SanityDocument } from "@sanity/client";
import ImageFullScreen from "../../components/ImageFullScreen.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { loadQuery } from "../../sanity/lib/loadQuery";
import { urlForImage } from "../../sanity/lib/urlForImage";

const { params } = Astro;

const { data } = await loadQuery<SanityDocument[]>({
  query: `*[_type == "works"]|order(orderRank asc)`,
});
const index = data.findIndex(({ slug }) => slug.current === params.slug);
const prevSlug = index > 0 ? data[index - 1].slug.current : undefined;
const nextSlug =
  index < data.length - 1 ? data[index + 1].slug.current : undefined;

// Get the current work's image for open graph
const openGraphImageUrl = urlForImage(data?.[index]?.image).url();
---

<BaseLayout noHeader noFooter openGraphImageUrl={openGraphImageUrl}>
  <ImageFullScreen
    sanityType="works"
    originPageUrl="/work"
    slug={params.slug}
    prevSlug={prevSlug}
    nextSlug={nextSlug}
  />
</BaseLayout>
