---
import { Image } from "astro:assets";
import headerImage from "./header_image.jpg";
---

<style>
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 30px;
  }

  nav {
    display: flex;
    margin-top: 30px;
    margin-bottom: 20px;
  }

  a {
    color: #9b9b9b;
    text-decoration: none;
    padding: 10px;
    margin: 0 20px;
    font-size: 14px;
    text-align: center;
    font-weight: 300;
    transition: opacity 100ms;
  }

  a:hover {
    opacity: 0.5;
  }

  .image {
    height: 120px;
    width: auto;
  }
</style>

<div class="header">
  <nav>
    <a href="/work">Work</a>
    <a href="/prints">Prints</a>
    <a href="/shop">Shop</a>
    <a href="/info">Info</a>
  </nav>

  <Image
    class="image"
    src={headerImage}
    alt="Emily Oot Calligraphy"
    height="240"
  />
</div>
